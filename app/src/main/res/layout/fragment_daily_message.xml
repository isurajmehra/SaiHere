<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context="com.sairajen.saihere.fragments.DailyMessage">

    <LinearLayout
        android:background="@color/light_black"
        android:padding="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Shirdi Sai baba Daily Message"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="top"
                android:gravity="top"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/daily_message_date"
                tools:text="24-Jun-2017 Saturday"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:gravity="top"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/daily_message_image"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="12dp"
                android:layout_gravity="end"
                android:id="@+id/daily_message_share"
                android:background="@drawable/share"
                android:layout_width="80dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cAppsDailyMessage"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/homeMenuImage"
            android:src="@drawable/capps"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:id="@+id/ll_home_menu"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/iv_home_menu"
            android:layout_toStartOf="@+id/iv_home_menu"
            android:layout_toRightOf="@+id/homeMenuImage"
            android:layout_toEndOf="@+id/homeMenuImage"
            android:layout_above="@+id/view_home_menu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/homeMenuTitle"
                android:text="More cool app for you"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="top"
                android:gravity="top"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/homeMenuSubTitle"
                android:text="Cool and amazing apps recommended for you"
                android:textColor="#757575"
                android:gravity="top"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <View
            android:id="@+id/view_home_menu"
            android:layout_toEndOf="@+id/homeMenuImage"
            android:layout_toRightOf="@+id/homeMenuImage"
            android:layout_below="@+id/homeMenuImage"
            android:background="@color/light_black"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </RelativeLayout>

</LinearLayout>
